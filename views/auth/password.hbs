<div class="row">
  <div class="col s6 offset-s3">
    {{#if error}} <!--если есть ошибка-->
      <p class="alert">{{error}}</p> <!--выведем оповещение с ошибкой-->
    {{/if}}

    <h1>Задайте новый пароль</h1>
    <!--Создадим форму для отправки данных на сервер-->
    <form action="/auth/password" method="POST">
      <div class="input-field"> <!--зададим класс для элемента-->
       <input id="password" name="password" type="password" class="validate" required> <!--добавим поле ввода. не может быть пустым-->
       <label for="password">Новый пароль</label> <!--label для данноо поля-->
       <!--установим сообщения-подсказки для каждого поля-->
       <span class="helper-text" data-error="Введите пароль"</span>
      </div>

      <input type="hidden" name="_csrf" value="{{csrf}}">
      <input type="hidden" name="userId" value="{{userId}}">
      <input type="hidden" name="token" value="{{token}}">

      <!-- добавим элемент button на форму-->
      <button class="btn btn-primary" type="submit">обновить пароль</button>
    </form>
  </div>
</div>
