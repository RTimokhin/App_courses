<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Войти</a></li>
        <li class="tab col s6"><a href="#register">Регистрация</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">

      {{#if loginError}} <!--если есть ошибка-->
        <p class="alert">{{loginError}}</p>
      {{/if}}

      <h1>Войти в магазин</h1>
      <!--Создадим форму для отправки данных-->
      <form action="/auth/login" method="POST">
        <div class="input-field"> <!--зададим класс для элемента-->
           <!--добавим поле ввода. не может быть пустым-->
          <input id="email" name="email" type="email" class="validate" required>
          <label for="email">Email</label>  <!--label для данноо поля-->
          <!--установим сообщения-подсказки для каждого поля-->
          <span class="helper-text" data-error="Введите email"></span>
        </div>

        <div class="input-field">  <!--зададим класс для элемента-->
           <!--добавим поле ввода-->
          <input id="password" name="password" type="password" class="validate" required>
          <label for="password">Пароль</label> <!--label для данного поля-->
          <!--установим сообщения-подсказки для каждого поля-->
          <span class="helper-text" data-error="Введите пароль"></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">

        <p><a href="/auth/reset">Забыли пароль?</a></p>

        <!-- добавим элемент button на форму-->
        <button class="btn btn-primary" type="submit">Войти</button>
      </form>
    </div>
    <div id="register" class="col s6 offset-s3">
      {{#if registerError}}  <!--если есть ошибка-->
        <p class="alert">{{registerError}}</p> <!--выведем текст ошибки-->
      {{/if}}

      <h1>Создать аккаунт</h1>
      <!--После отправки данные с формы будут уходить по адресу /add-->
      <form action="/auth/register" method="POST" novalidate>
        <div class="input-field"> <!--зададим класс для элемента-->
          <!--добавим поле ввода. не может быть пустым-->
          <input id="remail" name="email" type="email" class="validate" required>
          <label for="remail">Email</label> <!--label для данноо поля-->
          <!--установим сообщения-подсказки для каждого поля-->
          <span class="helper-text" data-error="Введите email"></span>
        </div>

        <div class="input-field">  <!--зададим класс для элемента-->
          <input id="rpassword" name="password" type="password" class="validate" required>
          <label for="rpassword">Пароль</label>
          <!--установим сообщения-подсказки для каждого поля-->
          <span class="helper-text" data-error="Введите пароль"></span>
        </div>

        <div class="input-field">
          <input id="confirm" name="confirm" type="password" class="validate" required>
          <label for="confirm">Пароль еще раз</label>
          <span class="helper-text" data-error="Введите пароль"></span>
        </div>

        <div class="input-field">
          <input id="name" name="name" type="text" class="validate" required>
          <label for="name">Ваше имя</label>
          <span class="helper-text" data-error="Введите имя"></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">
        <!-- добавим элемент button на форму-->
        <button class="btn btn-primary" type="submit">Зарегистрироваться</button>
      </form>
    </div>
  </div>
</div>
