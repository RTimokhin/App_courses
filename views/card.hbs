<h1>Корзина</h1>

<div id="card">
{{#if courses.length}}  <!--если длина массива с курсами не равна 0-->
  <table> <!--выведем на страницу следующую таблицу-->
    <thead>
      <tr>
        <th>Название</th>
        <th>Количество</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>

      {{#each courses}} <!--для каждого курса в корзине выведем-->
      <tr>
        <td>{{title}}</td> <!--название курса-->
        <td>{{count}}</td> <!--количество-->
        <!--кнопка удаления курсов из корзины-->
        <td>
          <button
            class="btn btm-small js-remove"
            data-id="{{id}}"
            data-csrf="{{@root.csrf}}"
          >Удалить</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <!--выведем общкю цену за купленные курсы-->
  <p><strong>Цена:</strong> <span class="price">{{price}}</span></p>

  <!--создадим форму с кнопкой для регистрации заказа-->
  <form action="/orders" method="POST">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn">Сделать заказ</button>
  </form>
{{else}} <!--если в корзине нет курсов, выведем на страницу контент-->
  <p>Корзина пуста</p>
{{/if}}
</div>
