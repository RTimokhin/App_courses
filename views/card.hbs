<h1>Корзина</h1>

<div id="card">
{{#if courses.length}} <!--если длина массива с курсами не равна 0-->
  <table> <!--то выведем на страницу следующий контент-->
    <thead>
      <tr>
        <th>Название</th>
        <th>Количество</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>

      {{#each courses}} <!--для каждого курса в корзине выведем таблицу-->
      <tr>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <!--кнопка удаления курсов из корзины-->
        <td><button class="btn btm-small js-remove" data-id="{{id}}">Удалить</button></td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <!--выведем общкю цену за купленные курсы-->
  <p><strong>Цена:</strong> <span class="price">{{price}}</span></p>

  <form actions="/orders" method="POST">
    <button type="submit" class="btn">Сделать заказ</button>
{{else}} <!--если корзина пуста, выведем на страницу контент-->
  <p>Корзина пуста</p>
{{/if}}
</div>
