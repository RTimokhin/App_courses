<h1>Мои заказы</h1>

{{#if orders.length}} <!--если количество заказов не равно 0-->
  {{#each orders}} <!--для каждого заказа выведем-->
    <div class="row">
      <div class="col s6 offset-s3">
        <div class="card">
          <div class="card-content">
            <span class="card-title">
              Заказ <small>{{_id}}</small> <!--доавим id заказа-->
            </span>
            <p class="date">{{date}}</p> <!--добавим дату заказа-->
            <!--добавим имя пользователя и email-->
            <p><em>{{user.userId.name}}</em> ({{user.userId.email}})</p>

            <ol>
              {{#each courses}} <!--для каждого курса выведем-->
                <li>
                  <!--название курса и количество-->
                  {{course.title}} (x<strong>{{count}}</strong>)
                </li>
              {{/each}}
            </ol>

            <hr>
            <!--выведем сумму заказа-->
            <p>Цену: <span class="price">{{price}}</span></p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}} <!--если заказов нет, выведем контент-->
  <p>Заказов пока нет</p>
{{/if}}
