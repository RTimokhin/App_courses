<nav>
  <div class="nav-wrapper">
    <a href="/" class="brand-logo">Магазин курсов</a>
    <ul id="nav-mobile" class="right hide-on-med-and-down">

      <!--если свойство isHome в значении true, выделим данный элемент-->
      {{#if isHome}}
        <li class="active"><a href="/">Главная</a></li>
      {{else}}
        <li><a href="/">Главная</a></li> <!--иначе оставим элемент без выделения-->
      {{/if}}

      <!--если свойство isCourses в значении true, выделим данный элемент-->
      {{#if isCourses}}
        <li class="active"><a href="/courses">Курсы</a></li>
      {{else}}
        <li><a href="/courses">Курсы</a></li> <!--иначе оставим элемент без выделения-->
      {{/if}}

      {{#if isAuth}} <!--если пользователь залогинен в системе-->
