          <li class="active"><a href="/add">Добавить курс</a></li>
        {{else}}
          <li><a href="/add">Добавить курс</a></li> <!--иначе оставим элемент без выделения-->
        {{/if}}

        <!--если свойство isCard в значении true, выделим данный элемент-->
